<view class="page"><image class="cover" mode="aspectFill" src="{{activity.cover}}"></image><view class="main"><view class="title">{{activity.title}}</view><view class="icon-bar">车主专属</view><view class="date-area"><view class="date">{{activity.start_time+" - "+activity.end_time}}</view><block wx:if="{{item.status==='signing-up'}}"><view class="status-tag signing-up">报名中</view></block><block wx:if="{{item.status==='signing-end'}}"><view class="status-tag signing-end">报名结束</view></block><block wx:if="{{item.status==='signed'}}"><view class="status-tag signed">已报名</view></block></view><view class="address">{{activity.address}}</view><view class="description-label">活动详情</view><rich-text class="description-content" nodes="{{activity.description}}"></rich-text><view class="apply-timerange">{{"报名时间: "+activity.start_time+" - "+activity.end_time}}</view><block wx:if="{{!activityCurrentUserApplication}}"><view class="activity-apply-btn">立即报名</view></block><block wx:if="{{activityCurrentUserApplication}}"><view class="activity-apply-btn disable">已报名</view></block></view></view>