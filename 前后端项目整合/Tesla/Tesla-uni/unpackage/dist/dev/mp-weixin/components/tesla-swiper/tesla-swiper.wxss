.swiper-area {
	width: 100%;
	height: 85vh;
	position: relative;
}
.swiper-area swiper {
	height: 100%;
}
.swiper-area .swiper-item {
	height: 100%;
	position: relative;
}
.swiper-area .swiper-item image {
	display: block;
	width: 100%;
	height: 100%;
}
.swiper-area .swiper-content {
	pointer-events: none;
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
}
.swiper-area .swiper-content .title {
	margin-top: 250rpx;
	font-size: 80rpx;
}
.swiper-content .meta {
	width: 100%;
	margin-top: 500rpx;
	display: flex;
	justify-content: space-evenly;
}
.swiper-content .meta .items {
	color: #ffffff;
	display: flex;
	flex-direction: column;
	align-items: center;
}
@-webkit-keyframes fadeIn{
0% {
		opacity: 0;
}
100% {
		opacity: 1;
}
}
@keyframes fadeIn{
0% {
		opacity: 0;
}
100% {
		opacity: 1;
}
}
.swiper-content .meta .items .item-title {
	font-size: 40rpx;
	-webkit-animation: fadeIn 1s;
	        animation: fadeIn 1s;
}
.swiper-content .meta .items .item-subtitle {
	margin-top: 10rpx;
	font-size: 25rpx;
	-webkit-animation: fadeIn 2s;
	        animation: fadeIn 2s;
}
.swiper-content .action {
	pointer-events: all;
	margin-top: 70rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
}
.swiper-content .action .book-btn {
	border-radius: 80rpx;
	overflow: hidden;
	position: relative;
	width: 80vw;
	z-index: 1;
}
.swiper-content .action .book-btn button {
	color: #ffffff;
	background: none;
	z-index: 1;
	width: 100%;
	height: 100%;
	font-size: 24rpx;
}
.swiper-content .action .book-btn .book-btn-back {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background-color: #000000;
	z-index: 0;
	opacity: 0.4;/*模糊 */
}
.swiper-content .action .view-configuration {
	margin-top: 8rpx;
	font-size: 24rpx;
	color: #636363;
	text-decoration: underline;
}
.swiper-dots {
	position: absolute;
	left: 0;
	bottom: 40rpx;
	width: 100%;
	display: flex;
	justify-content: center;
}
.swiper-dots .dot {
	width: 80rpx;
	height: 6rpx;
	background-color: #bcbcb7;
}
.swiper-dots .active {
	background-color: #ffffff;
}

