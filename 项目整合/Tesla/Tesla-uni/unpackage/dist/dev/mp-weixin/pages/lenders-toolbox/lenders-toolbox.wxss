.float-card {
	background-color: #fff;
	width: calc(100vw - 90rpx);
	position: fixed;
	bottom: 0;
	left: 45rpx;
	z-index: 9999;
	padding: 35rpx;
	box-sizing: border-box;
	display: flex;
    flex-direction: column;
	align-items: center;
}
@-webkit-keyframes fadeOut{
0%{opacity: 1;}
100%{opacity: 0;}
}
@keyframes fadeOut{
0%{opacity: 1;}
100%{opacity: 0;}
}
@-webkit-keyframes fadeIn{
0%{opacity: 0;}
100%{opacity: 1;}
}
@keyframes fadeIn{
0%{opacity: 0;}
100%{opacity: 1;}
}
.float-card .product-box {
	display: flex;
	align-items: center;
	overflow: hidden;
	transition: all 1s;
	height: 0;
	opacity: 1;
	-webkit-animation: fadeOut 1s;
	        animation: fadeOut 1s;
}
.collapse {
	transition: all 1s;
	height: 460rpx;
	margin-bottom: 80rpx;
	-webkit-animation: fadeIn 1s;
	        animation: fadeIn 1s;
}
.float-card .product-box .product-image {
	width: 476rpx;
	margin-bottom: 80rpx;
}
.float-card .product-box .product-name {
	font-size: 35rpx;
	font-weight: bold;
	margin-bottom: 10rpx;
}
.float-card .product-box .product-line-name {
	font-size: 40rpx;
	font-weight: bold;
}
.float-card .action-box {
	width: 100%;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-between;
	padding-bottom: 25rpx;
	border-bottom: 2rpx solid #d4d4d4;
}
.float-card .action-box .label {
	font-size: 30rpx;
	height: 40rpx;
	line-height: 40rpx;
}
.float-card .action-box .icon {
	width: 40rpx;height: 40rpx;
}
.float-card .calculate-box {
	width: 100%;
	display: flex;
	margin-top: 50rpx;
}
.float-card .calculate-box .calculate-item {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 20rpx;
	transition: all 1s;
	height: 40rpx;
}
.float-card .calculate-box .calculate-item.hide {
	height: 0;
	overflow: hidden;
	margin: 0;
	transition: all 1s;
}
.float-card .calculate-box .calculate-item .label {
	font-size: 24rpx;
	font-weight: bold;
}
.float-card .calculate-box .calculate-item .number {
	font-size: 28rpx;
	font-weight: bold;
}
.float-card .test-drive-btn {
	width: 530rpx;
	height: 70rpx;
	border: 4rpx solid #000;
	border-radius: 35rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;
	font-size: 22rpx;
	font-weight: bold;
	margin-top: 28rpx;
}
.float-card .tips {
	margin-top: 65rpx;
	font-size: 24rpx;
	line-height: 40rpx;
	color: #a4a4a5;
	transition: all 1s;height: 80rpx;
}
.float-card .tips.hide {
	margin-top: 0;
	height: 0;
	overflow: hidden;
	transition: all 1s;
}
.occupation-box {
	width: 100%;
	height: 410rpx;
	display: block;
}

